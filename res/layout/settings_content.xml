<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <TextView
        android:id="@+id/headerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:text="Поиск"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        tools:text="Поиск" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headerSearch"
        android:text="Показать меня"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/in_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/search_man" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/search_man"
        android:text="Показать мне"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Возраст"
        android:textSize="18sp"
        android:layout_below="@+id/search_man"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="с"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="до"
        android:textSize="18sp"
        android:layout_below="@+id/search_min_age"
        android:layout_alignStart="@+id/search_man" />

    <CheckBox
        android:id="@+id/search_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_man"
        android:layout_alignBottom="@+id/search_man"
        android:layout_alignParentEnd="true"
        android:text="Женщин"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/search_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мужчин"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:id="@+id/search_min_age"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/notifications_likes" />

    <EditText
        android:id="@+id/search_max_age"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/search_min_age" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:text="Уведомления"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        tools:text="Уведомления" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="9dp"
        android:text="Новые лайки"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="17dp"
        android:text="Новые сообщения"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/notifications_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/notifications_likes" />

    <Switch
        android:id="@+id/notifications_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/textView8" />

</RelativeLayout>